<Window x:Class="MosersGameOfLife.MainWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       Title="Moser's Game of Life" Height="600" Width="800">
   <Grid>
       <!-- Main Grid Display -->
       <UniformGrid x:Name="GridDisplay" Background="White" />

       <!-- Transparent Settings Panel -->
       <StackPanel Orientation="Vertical" Background="#AAFFFFFF" 
                   HorizontalAlignment="Right" VerticalAlignment="Top" 
                   Margin="10" Width="200">
           <Button Content="Generate New World" Click="GenerateNewGrid_Click" />
            <ComboBox x:Name="ColorBehaviorComboBox" SelectionChanged="ColorBehaviorComboBox_SelectionChanged" SelectedIndex="0">
                <ComboBoxItem Content="Black and White" Tag="BlackAndWhite" />
                <ComboBoxItem Content="Majority Color" Tag="MajorityColor" />
                <ComboBoxItem Content="Average Color" Tag="AverageColor" />
               
           </ComboBox>
           <CheckBox Content="Enable Trail" x:Name="TrailCheckBox" 
                     Checked="TrailCheckBox_Checked" Unchecked="TrailCheckBox_Unchecked" />
        </StackPanel>
   </Grid>
</Window>