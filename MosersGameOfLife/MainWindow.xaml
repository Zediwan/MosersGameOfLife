<Window x:Class="MosersGameOfLife.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game of Life" Height="1000" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Button to generate a new grid -->
        <Button Content="Generate New Grid" Click="GenerateNewGrid_Click" Margin="10" />

        <!-- Grid display -->
        <ScrollViewer Grid.Row="1">
            <UniformGrid x:Name="GridDisplay" />
        </ScrollViewer>
    </Grid>
</Window>